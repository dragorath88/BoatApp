{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    },
    "File": {
      "Path": "logs/boatapp.log",
      "Append": true,
      "MaxFileSize": "10MB",
      "MaxRollingFiles": 3
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "REPLACE_ME_WITH_THE_SQL_SERVER_CONNECTION_STRING"
  },
  "Jwt": {
    "Secret": "mySuperSecretKey1234",
    "ExpiresInMinutes": 60,
    "Issuer": "BoatEnterprise",
    "Audience": "BoatApp"
  }
}
